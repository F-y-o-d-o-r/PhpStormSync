<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="CSS" injector-id="xml">
      <display-name>html/@lang</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("lang")).withParent(xmlTag().withLocalName(string().equalTo("html")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>